<% if @songs && @songs.errors.any? %>
  <div>
    <strong>Oops, you forgot something.</strong>
    <ul>
      <% @songs.errors.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/new", method="post">
  <div class="row">
    <div class="input-field col s12">
      <input type="text" name="name" placeholder= "Name" value="<%= @songs && @songs.name %>">
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" name="artist" placeholder="Artist" value="<%= @songs && @songs.artist %>">
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input type="text" name="url" placeholder="SoundCloud URL" value="<%= @songs && @songs.url %>">
    </div>
  </div>

    <input type="submit" value="Submit" class="waves-effect waves-light orange accent-3 btn">
</form>

